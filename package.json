{
  "name": "study-abroad-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "MVP UK Study & Migration Research App",
  "workspaces": [
    "frontend",
    "shared/config",
    "shared/feature-flags",
    "shared/database",
    "shared/logging"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:shared": "cd shared && npm run dev",
    "build": "npm run build:shared && npm run build:frontend",
    "build:shared": "cd shared && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "lint": "npm run lint:frontend && npm run lint:shared && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:shared": "cd shared && npm run lint",
    "lint:backend": "cd backend && ruff check src",
    "test": "npm run test:frontend && npm run test:shared && npm run test:backend",
    "test:frontend": "cd frontend && npm test",
    "test:shared": "cd shared && npm test",
    "test:backend": "cd backend && pytest",
    "clean": "rm -rf frontend/{node_modules,.next,dist} shared/{node_modules,dist} backend/{__pycache__,.pytest_cache,dist}"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0",
    "vite": "^7.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0",
    "python": ">=3.12.0"
  }
}
