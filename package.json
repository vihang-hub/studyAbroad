{
  "name": "studyabroad-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for StudyAbroad and related applications",
  "workspaces": [
    "apps/*/frontend",
    "packages/*"
  ],
  "scripts": {
    "dev:study-abroad": "cd apps/study-abroad && make dev",
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "lint:all": "npm run lint --workspaces",
    "clean": "rm -rf apps/*/frontend/{node_modules,.next,dist} packages/*/{node_modules,dist}",
    "create-app": "./infrastructure/scripts/create-new-app.sh"
  },
  "devDependencies": {
    "typescript": "^5",
    "@types/node": "^20"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
