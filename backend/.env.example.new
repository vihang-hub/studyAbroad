# ========================================
# Backend Environment Variables
# Updated for new configuration schema
# ========================================

# Environment Mode (dev, test, production)
ENVIRONMENT_MODE=dev

# Application Settings
APP_NAME=Study Abroad MVP
APP_VERSION=1.0.0
API_URL=http://localhost:8000
PORT=8000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT_MS=30000
DATABASE_CONNECTION_TIMEOUT_MS=2000

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_DIR=./logs
LOG_MAX_SIZE_MB=100
LOG_ROTATION_DAYS=1
LOG_RETENTION_DAYS=30
LOG_CONSOLE_ENABLED=true
LOG_PRETTY_PRINT=false

# Feature Flags
ENABLE_SUPABASE=false
ENABLE_PAYMENTS=false
ENABLE_RATE_LIMITING=true
ENABLE_OBSERVABILITY=false

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret

# Stripe Payment (optional if ENABLE_PAYMENTS=false)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret
STRIPE_PRICE_ID=price_your_stripe_price_id
PAYMENT_AMOUNT=2.99
PAYMENT_CURRENCY=GBP

# Gemini AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_TIMEOUT_MS=60000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_REPORTS_PER_DAY=10

# ========================================
# Environment-Specific Notes
# ========================================

# DEV MODE (ENVIRONMENT_MODE=dev):
# - ENABLE_SUPABASE must be false (uses local PostgreSQL)
# - ENABLE_PAYMENTS must be false (bypasses payment)
# - LOG_LEVEL defaults to DEBUG
# - Pretty printing enabled for logs

# TEST MODE (ENVIRONMENT_MODE=test):
# - ENABLE_SUPABASE must be true (uses Supabase)
# - ENABLE_PAYMENTS must be false (mock payments)
# - LOG_LEVEL defaults to DEBUG

# PRODUCTION MODE (ENVIRONMENT_MODE=production):
# - ENABLE_SUPABASE must be true
# - ENABLE_PAYMENTS must be true
# - LOG_LEVEL defaults to ERROR
# - All service keys required
