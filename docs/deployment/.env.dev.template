# ============================================================================
# Development Environment Configuration Template
# ============================================================================
# Copy this file to .env.dev and fill in the values
# This file should NOT be committed to git
# ============================================================================

# Environment Mode
ENVIRONMENT_MODE=dev
NODE_ENV=development

# Application
APP_NAME=Study Abroad MVP
APP_VERSION=1.0.0
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:8000
API_URL=http://localhost:8000
PORT=8000

# Database (Local PostgreSQL)
DATABASE_URL=postgresql://studyabroad:password@localhost:5432/studyabroad_dev
DATABASE_POOL_MAX=20
DATABASE_IDLE_TIMEOUT_MS=30000
DATABASE_CONNECTION_TIMEOUT_MS=2000

# Supabase (DISABLED in dev mode)
ENABLE_SUPABASE=false
# SUPABASE_URL= (not required in dev)
# SUPABASE_ANON_KEY= (not required in dev)
# SUPABASE_SERVICE_ROLE_KEY= (not required in dev)

# Feature Flags
ENABLE_PAYMENTS=false
ENABLE_RATE_LIMITING=true
ENABLE_OBSERVABILITY=false

# Logging
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_SIZE_MB=100
LOG_ROTATION_DAYS=1
LOG_RETENTION_DAYS=30
LOG_CONSOLE_ENABLED=true
LOG_PRETTY_PRINT=true

# Clerk Authentication
# Get these from: https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_dev_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_dev_secret_key_here
CLERK_WEBHOOK_SECRET=whsec_your_dev_webhook_secret_here
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/chat
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/chat

# Stripe Payment (DISABLED in dev mode)
# Payment flow bypassed, but keys needed for testing payment UI
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_test_webhook_secret_here
STRIPE_PRICE_ID=price_your_test_price_id_here
PAYMENT_AMOUNT=2.99
PAYMENT_CURRENCY=GBP

# Gemini AI
# Get API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIzaSyXXXXXXXXXXXXXXXXXXXXXXXXXX
GEMINI_MODEL=gemini-1.5-pro
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.7
GEMINI_TIMEOUT_MS=60000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_SEC=60
RATE_LIMIT_REPORTS_PER_DAY=10

# ============================================================================
# Development Setup Instructions
# ============================================================================

# 1. Install PostgreSQL locally:
#    brew install postgresql@14 (macOS)
#    sudo apt-get install postgresql-14 (Linux)

# 2. Start PostgreSQL:
#    brew services start postgresql@14

# 3. Create database:
#    createdb studyabroad_dev
#    psql studyabroad_dev -c "CREATE USER studyabroad WITH PASSWORD 'password';"
#    psql studyabroad_dev -c "GRANT ALL PRIVILEGES ON DATABASE studyabroad_dev TO studyabroad;"

# 4. Run migrations:
#    npm run migrate:dev

# 5. Start development servers:
#    Terminal 1: npm run dev (frontend)
#    Terminal 2: cd backend && uvicorn src.main:app --reload --port 8000

