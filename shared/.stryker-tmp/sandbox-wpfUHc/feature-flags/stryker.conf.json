{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/hooks.tsx",
    "!src/components.tsx"
  ],
  "thresholds": {
    "high": 90,
    "low": 80,
    "break": 80
  },
  "reporters": ["html", "clear-text", "progress"],
  "htmlReporter": {
    "fileName": "mutation-report.html"
  },
  "timeoutMS": 60000,
  "concurrency": 4
}
