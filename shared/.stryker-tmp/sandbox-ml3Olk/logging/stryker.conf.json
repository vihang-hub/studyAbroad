{
  "$schema": "./node_modules/@stryker-mutator/core/schema/stryker-schema.json",
  "packageManager": "npm",
  "reporters": ["html", "clear-text", "progress", "json"],
  "testRunner": "vitest",
  "coverageAnalysis": "perTest",
  "mutate": [
    "src/**/*.ts",
    "!src/**/*.test.ts",
    "!src/**/*.spec.ts",
    "!src/index.ts"
  ],
  "vitest": {
    "configFile": "vitest.config.ts"
  },
  "thresholds": {
    "high": 90,
    "low": 80,
    "break": 80
  },
  "checkers": ["typescript"],
  "tsconfigFile": "tsconfig.json",
  "ignorePatterns": [
    "dist",
    "node_modules",
    "coverage",
    "tests",
    ".stryker-tmp"
  ]
}
